<div class="container p-4">
    <div class="row">

        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <img src="https://gif-avatars.com/img/100x100/deal-with-it.gif" alt="avatar"class="card-img-left mx-auto m-1 rounded-circle w-5"> <h3> User Profile</h3>
                </div>

                <div class="card-body">
                    <form class="form-horizontal" role="form">
                    <div class="form-group row">
                        <label for="first_name" class="col-sm-3 control-label p-2">First Name:</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" name="first_name" value="{{ user.firstName }}" disabled>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="last_name" class="col-sm-3 control-label p-2">Last Name:</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" name="last_name" value="{{ user.lastName }}" disabled>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="user_name" class="col-sm-3 control-label p-2">User Name:</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" name="user_name" value="{{ user.userName }}" disabled>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email" class="col-sm-3 control-label p-2">Email:</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="email" name="email" value="{{ user.email }}" disabled>
                        </div>
                    </div>
                    </form>
                </div>

                <div class="card-footer text-center">
                    <a href="/edituserprofile">Edit Profile</a>
                </div>
            </div>
        </div>
    </div>
</div>
